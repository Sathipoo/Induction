    padding: 0;
    margin: 0;
  }

  .nav-item {
    margin-bottom: 0.5rem;
  }

  .nav-link {
    display: block;
    padding: 0.75rem 1rem;
    color: #4a5568;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-weight: 500;
    border-left: 3px solid transparent;
  }

  .nav-link:hover {
    background: #f7fafc;
    color: #f97316;
    border-left-color: #f97316;
    transform: translateX(4px);
  }

  /* Mobile Navigation */
  .mobile-nav-toggle {
    display: none;
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 1000;
    background: #f97316;
    color: white;
